# Lebanon Academy Backend Configuration
# Copy this file to .env and fill in your actual values

# ==================== Django Configuration ====================
DJ_SECRET=your-secret-key-change-this-in-production
DJ_DEBUG=True
DJ_ALLOWED_HOSTS=localhost,127.0.0.1

# ==================== Database Configuration ====================
DATABASE_URL=sqlite:///./db.sqlite3

# ==================== AWS S3 + CloudFront Configuration ====================
USE_AWS_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_REGION_NAME=us-east-1
AWS_STORAGE_BUCKET_NAME=your-bucket-name

# ==================== CloudFront Signed URLs (Video Security) ====================
# Generate a new RSA key pair:
#   openssl genrsa -out cloudfront_private_key.pem 2048
#   openssl rsa -in cloudfront_private_key.pem -pubout -out cloudfront_public_key.pem
# 
# Then:
# 1. Upload public key to AWS CloudFront > Public keys
# 2. Set these environment variables:

CLOUDFRONT_DOMAIN=your-distribution.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=APKAIOSFODNN7EXAMPLE
CLOUDFRONT_PRIVATE_KEY_PATH=/absolute/path/to/cloudfront_private_key.pem

# ==================== CloudFront Custom Headers (Additional Security) ====================
# Custom header for origin verification (used only if Origin Access Identity is configured)
# For free tier CloudFront, leave this empty - signed URLs + auth headers are sufficient
CLOUDFRONT_ORIGIN_SECRET=your-secret-origin-verification-key

# Custom header for video access authentication
# Used by frontend to send user-specific auth header with video requests
# Generate a strong random key: openssl rand -hex 32
CLOUDFRONT_CUSTOM_AUTH_SECRET=your-secret-auth-key-generate-with-openssl-rand-hex-32

# ==================== Email Configuration ====================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# ==================== Djoser/JWT Configuration ====================
JWT_SECRET_KEY=your-jwt-secret-key

# ==================== Paystack Configuration ====================
PAYSTACK_PUBLIC_KEY=pk_live_your_public_key
PAYSTACK_SECRET_KEY=sk_live_your_secret_key
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# ==================== Platform Configuration ====================
SITE_URL=http://localhost:8000
PLATFORM_COMMISSION=0.05
ADMIN_INVITE_CODE=your_invite_code

# ==================== Cloudinary Configuration (Optional) ====================
USE_CLOUDINARY=False
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==================== Redis Configuration (For Celery/Encoding Queue) ====================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==================== EncodingBackend Worker Configuration ====================
# URL where EncodingBackend worker is running
ENCODING_WORKER_URL=http://localhost:8001
ENCODING_WORKER_SECRET=your-secret-key-for-encoding-backend

# ==================== File Upload Configuration ====================
MEDIA_ROOT=/absolute/path/to/media
MAX_UPLOAD_SIZE=5368709120  # 5GB in bytes

# ==================== Environment ====================
ENVIRONMENT=development
