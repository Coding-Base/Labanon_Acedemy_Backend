# Backend .env Template
# Copy this file to backend/.env and fill in your values

# ==================== Django Configuration ====================
DJ_SECRET=your-super-secret-key-change-this-in-production
DJ_DEBUG=True
DJ_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ==================== Database ====================
# Uncomment and configure if using PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/lebanon_academy

# ==================== AWS S3 Configuration ====================
# Set to True to enable AWS S3 for video storage
USE_AWS_S3=False

# Your AWS S3 Credentials (get these from IAM user)
AWS_ACCESS_KEY_ID=YOUR_IAM_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_IAM_SECRET_ACCESS_KEY
AWS_S3_REGION_NAME=us-east-1
AWS_STORAGE_BUCKET_NAME=lebanon-academy-videos-prod

# ==================== CloudFront Configuration ====================
# CloudFront domain for CDN (get this after creating distribution)
CLOUDFRONT_DOMAIN=d123456abcdef.cloudfront.net
CLOUDFRONT_DISTRIBUTION_ID=E1234ABCD5678

# ==================== Celery Configuration (for video conversion) ====================
# Redis broker URL for Celery task queue
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==================== Frontend Configuration ====================
FRONTEND_URL=http://localhost:5173

# ==================== Email Configuration ====================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ==================== Cloudinary (Legacy, optional) ====================
USE_CLOUDINARY=False
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==================== Platform Configuration ====================
PLATFORM_COMMISSION=0.05
ADMIN_INVITE_CODE=your-admin-invite-code
